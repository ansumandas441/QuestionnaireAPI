{
  "openapi": "3.0.0",
  "info": {
    "title": "Questionnaire API",
    "description": "API for retrieving questionnaire data",
    "version": "1.0.0"
  },
  "paths": {
    "/api/questionnaire/getQuestions": {
      "get": {
        "summary": "Returns a list of questions",
        "description": "Retrieve questions related to a specific type",
        "parameters": [
          {
            "name": "topicId",
            "in": "query",
            "description": "ID of the topic to retrieve questions for",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "paginationStart",
            "in": "query",
            "description": "Pagination start index",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "paginationLimit",
            "in": "query",
            "description": "Maximum number of questions to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Question"
                      }
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description" : "Failure response, for invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message":{
                      "type":"string",
                      "example":"Invalid input..."
                    }
                  }
                }
              }
            }
          },
          "500":{
            "description" : "Failure response, server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message":{
                      "type":"string",
                      "example":"Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/questionnaire/sendAnswers": {
      "post": {
        "summary": "Submit text question and media",
        "description": "User can send answer and media to a question",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "questionId": {
                    "type": "integer",
                    "description": "ID of the question"
                  },
                  "answer": {
                    "type": "string",
                    "description": "Textual answer to the question"
                  },
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "File attachment"
                  }
                },
                "required": ["questionId","answer"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Success"
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description" : "Failure response, for invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message":{
                      "type":"string",
                      "example":"Invalid input..."
                    }
                  }
                }
              }
            }
          },
          "500":{
            "description" : "Failure response, server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message":{
                      "type":"string",
                      "example":"Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Question": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "The ID of the question"
          },
          "question": {
            "type": "string",
            "description": "The question text"
          }
        }
      }
    }
  }
}
